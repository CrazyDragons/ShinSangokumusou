<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hzw.shinsangokumusou.diaplay.SelectPlayer">

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="赵云" />

    <ImageView
        android:id="@+id/play_pic"
        android:layout_width="108dp"
        android:layout_height="192dp"
        android:layout_below="@id/player_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:background="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/play_pic"
        android:text="体 力" />

    <ProgressBar
        android:id="@+id/player_HP"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progressbar_player_hp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_name"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/play_pic"
        android:max="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/play_pic"
        android:text="兵 力" />

    <ProgressBar
        android:id="@+id/player_power"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progressbar_player_power"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_name"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/play_pic"
        android:max="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="160dp"
        android:layout_toRightOf="@id/play_pic"
        android:text="攻击力" />

    <ProgressBar
        android:id="@+id/player_atc"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progressbar_player_atc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_name"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="160dp"
        android:layout_toRightOf="@id/play_pic"
        android:max="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@id/play_pic"
        android:text="防御力" />

    <ProgressBar
        android:id="@+id/player_def"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progressbar_player_def"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_name"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@id/play_pic"
        android:max="100" />

    <Button
        android:id="@+id/player_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="确认"/>

    <HorizontalScrollView
        android:id="@+id/MVs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/player_confirm">

        <LinearLayout
            android:id="@+id/show_player_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </HorizontalScrollView>




</RelativeLayout>
